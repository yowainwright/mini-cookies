{
  "name": "mini-cookies",
  "description": "A simple and minimalistic cookie management tool üç™",
  "version": "0.2.1",
  "main": "dist/mini-cookies.js",
  "types": "dist/mini-cookies.d.ts",
  "unpkg": "dist/mini-cookies.umd.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && pnpm transpile",
    "lint": "eslint src/**/*.ts",
    "prepare": "husky install",
    "prepublishOnly": "pnpm test && pnpm build",
    "release": "release-it",
    "test": "jest",
    "transpile": "tsc && rollup --config rollup.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@rollup/plugin-commonjs": "^22.0.0",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@rollup/plugin-typescript": "^8.3.1",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.3",
    "path-exists-cli": "^2.0.0",
    "release-it": "^15.0.0",
    "rimraf": "^3.0.2",
    "rollup": "^2.68.0",
    "rollup-plugin-uglify": "^6.0.4",
    "ts-jest": "^27.1.3",
    "tslib": "^2.3.1",
    "typescript": "^4.4.4"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest --findRelatedTests && yarn typecheck"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v%s"
    }
  },
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "homepage": "https://github.com/yowainwright/mini-cookies",
  "license": "MIT"
}

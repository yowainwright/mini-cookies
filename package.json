{
  "name": "mini-cookies",
  "description": "A simple and minimalistic cookie management tool 🍪",
  "version": "0.7.5",
  "main": "dist/mini-cookies.umd.js",
  "types": "dist/mini-cookies.d.ts",
  "unpkg": "dist/mini-cookies.umd.js",
  "files": [
    "dist"
  ],
  "engines": {
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "rimraf dist && pnpm transpile",
    "lint": "eslint src/**/*.ts",
    "prepare": "husky install",
    "prepublishOnly": "pnpm test && pnpm build",
    "release": "release-it",
    "test": "vitest run",
    "transpile": "tsc && rollup --config rollup.config.ts --configPlugin typescript",
    "typecheck": "tsc --noEmit",
    "update": "codependence --update"
  },
  "devDependencies": {
    "@commitlint/cli": "17.8.0",
    "@commitlint/config-conventional": "17.8.0",
    "@rollup/plugin-commonjs": "25.0.7",
    "@rollup/plugin-node-resolve": "15.2.3",
    "@rollup/plugin-typescript": "11.1.5",
    "@types/node": "20.8.6",
    "@typescript-eslint/eslint-plugin": "6.7.5",
    "@typescript-eslint/parser": "6.7.5",
    "codependence": "^0.2.6",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "husky": "^8.0.3",
    "lint-staged": "15.0.1",
    "path-exists-cli": "^2.0.0",
    "release-it": "16.2.1",
    "rimraf": "5.0.5",
    "rollup": "4.1.4",
    "rollup-plugin-uglify": "^6.0.4",
    "tslib": "2.6.2",
    "typescript": "5.2.2",
    "vite": "4.4.11",
    "vitest": "0.34.6"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && vitest run && pnpm typecheck"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v%s"
    }
  },
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "homepage": "https://jeffry.in/mini-cookies/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/mini-cookies.git"
  },
  "keywords": [
    "typescript",
    "cookie",
    "document-cookie",
    "micro",
    "mini-lib",
    "cookies",
    "state-management"
  ],
  "license": "MIT"
}

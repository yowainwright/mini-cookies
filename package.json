{
  "name": "mini-cookies",
  "description": "A simple and minimalistic cookie management tool ğŸª",
  "version": "0.1.0",
  "main": "dist/mini-cookies.js",
  "types": "dist/mini-cookies.d.ts",
  "unpkg": "dist/mini-cookies.amd.min.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "rimraf dist && pnpm transpile && pnpm minify",
    "lint": "eslint src/**/*.ts",
    "minify": "uglifyjs dist/mini-cookies.amd.js -c -m -o dist/mini-cookies.amd.min.js",
    "prepublishOnly": "pnpm test && pnpm build",
    "release": "release-it",
    "test": "jest",
    "transpile": "tsc && tsc -p tsconfig.amd.json",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.1.0",
    "@commitlint/config-conventional": "^16.0.0",
    "@types/jest": "^27.4.0",
    "@types/node": "^17.0.21",
    "@typescript-eslint/eslint-plugin": "^5.10.2",
    "@typescript-eslint/parser": "^5.10.2",
    "eslint": "^8.8.0",
    "eslint-config-prettier": "^8.3.0",
    "husky": "^7.0.4",
    "jest": "^27.4.7",
    "lint-staged": "^12.3.3",
    "path-exists-cli": "^2.0.0",
    "release-it": "^14.12.4",
    "rimraf": "^3.0.2",
    "ts-jest": "^27.1.3",
    "typescript": "^4.4.4",
    "uglify-js": "^3.15.2"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "jsdom"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && jest --findRelatedTests && yarn typecheck"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v%s"
    }
  }
}

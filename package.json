{
  "name": "mini-cookies",
  "description": "A simple and minimalistic cookie management tool 🍪",
  "version": "0.7.2",
  "main": "dist/mini-cookies.umd.js",
  "types": "dist/mini-cookies.d.ts",
  "unpkg": "dist/mini-cookies.umd.js",
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=7.0.0"
  },
  "scripts": {
    "build": "rimraf dist && pnpm transpile",
    "lint": "eslint src/**/*.ts",
    "prepare": "husky install",
    "prepublishOnly": "pnpm test && pnpm build",
    "release": "release-it",
    "test": "vitest run",
    "transpile": "tsc && rollup --config rollup.config.ts",
    "typecheck": "tsc --noEmit"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.1.2",
    "@commitlint/config-conventional": "^17.1.0",
    "@rollup/plugin-commonjs": "^23.0.2",
    "@rollup/plugin-node-resolve": "^15.0.1",
    "@rollup/plugin-typescript": "^9.0.2",
    "@types/node": "^18.11.3",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.26.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "path-exists-cli": "^2.0.0",
    "release-it": "^15.5.0",
    "rimraf": "^3.0.2",
    "rollup": "^3.2.5",
    "rollup-plugin-uglify": "^6.0.4",
    "tslib": "^2.4.0",
    "typescript": "^4.8.4",
    "vite": "^3.1.8",
    "vitest": "^0.24.3"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && vitest run && pnpm typecheck"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v%s"
    }
  },
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "homepage": "https://jeffry.in/mini-cookies/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/mini-cookies.git"
  },
  "keywords": [
    "typescript",
    "cookie",
    "document-cookie",
    "micro",
    "mini-lib",
    "cookies",
    "state-management"
  ],
  "license": "MIT"
}

{
  "name": "mini-cookies",
  "description": "A simple and minimalistic cookie management tool ðŸª",
  "version": "0.7.6",
  "main": "dist/mini-cookies.umd.js",
  "types": "dist/mini-cookies.d.ts",
  "unpkg": "dist/mini-cookies.umd.js",
  "files": [
    "dist"
  ],
  "engines": {
    "pnpm": ">=8.0.0"
  },
  "scripts": {
    "build": "rimraf dist && pnpm transpile",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint --fix src/**/*.ts",
    "prepare": "husky install",
    "prepublishOnly": "pnpm test && pnpm build",
    "release": "release-it",
    "test": "vitest run --environment jsdom",
    "transpile": "tsc && rollup --config rollup.config.ts --configPlugin typescript",
    "typecheck": "tsc --noEmit",
    "update": "codependence --update"
  },
  "devDependencies": {
    "@commitlint/cli": "19.8.0",
    "@commitlint/config-conventional": "19.8.0",
    "@rollup/plugin-commonjs": "28.0.3",
    "@rollup/plugin-node-resolve": "16.0.0",
    "@rollup/plugin-typescript": "12.1.2",
    "@types/node": "22.13.10",
    "@typescript-eslint/eslint-plugin": "8.26.0",
    "@typescript-eslint/parser": "8.26.0",
    "codependence": "^0.3.1",
    "eslint": "9.22.0",
    "eslint-config-prettier": "10.1.1",
    "husky": "9.1.7",
    "jsdom": "^24.0.0",
    "lint-staged": "15.4.3",
    "path-exists-cli": "^2.0.0",
    "release-it": "18.1.2",
    "rimraf": "6.0.1",
    "rollup": "4.35.0",
    "rollup-plugin-uglify": "^6.0.4",
    "tslib": "2.8.1",
    "typescript": "5.8.2",
    "vite": "6.2.1",
    "vitest": "3.0.8"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && vitest run && pnpm typecheck"
    }
  },
  "lint-staged": {
    "src/**/*.ts": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release v%s"
    }
  },
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "homepage": "https://jeffry.in/mini-cookies/",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/yowainwright/mini-cookies.git"
  },
  "keywords": [
    "typescript",
    "cookie",
    "document-cookie",
    "micro",
    "mini-lib",
    "cookies",
    "state-management"
  ],
  "license": "MIT",
  "dependencies": {
    "@eslint/js": "^9.1.1",
    "eslint-plugin-prettier": "^5.1.3",
    "typescript-eslint": "^7.7.1"
  }
}
